<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_horizontal_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_horizontal_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_weight="9"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingEnd="@dimen/paragraph_margin"
        android:paddingStart="@dimen/paragraph_margin"
        android:paddingTop="@dimen/paragraph_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_preview"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_tiny"
            android:textStyle="italic|bold" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:gravity="center_vertical"
                android:weightSum="2">

                <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/activity_vertical_margin"
                    android:layout_weight="1"
                    android:background="@color/colorPrimaryHint" />
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_line_type_post"
                android:layout_width="@dimen/i_icon_size_big"
                android:layout_height="@dimen/i_icon_size_big"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:src="@drawable/ic_type_post_question" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ic_format_align_left_black_24dp" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:minHeight="@dimen/btn_height">

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_post_writer_avatar"
                android:layout_width="@dimen/btn_height"
                android:layout_height="@dimen/btn_height"
                android:layout_marginRight="@dimen/action_padding"
                android:src="@drawable/ic_user"
                app:civ_border_color="@color/colorPrimary"
                app:civ_border_width="1dp" />

            <TextView
                android:id="@+id/txt_post_writer_user"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Trần Minh Quý"
                android:textSize="@dimen/text_size_small"
                android:textStyle="bold" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="16"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/paragraph_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_options"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_tiny"
            android:textStyle="italic|bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:orientation="vertical"
            tools:ignore="NestedWeights">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/paragraph_margin"
                android:layout_marginTop="20dp"
                android:text="@string/txt_type_post"
                android:textColor="@color/black_87"
                android:textSize="@dimen/text_size_tiny" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/i_icon_size_bigger"
                android:layout_marginEnd="@dimen/paragraph_margin"
                android:layout_marginStart="@dimen/dialog_margin_icon"
                android:layout_marginTop="@dimen/paragraph_margin">

                <TextView
                    android:id="@+id/tv_type_post_question"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_btn_border_fill"
                    android:gravity="center"
                    android:text="@string/type_post_question"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/t_size_caption"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_type_post_note"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/paragraph_margin"
                    android:layout_weight="1"
                    android:background="@drawable/bg_btn_border_empty"
                    android:gravity="center"
                    android:text="@string/type_post_note"
                    android:textColor="@color/black_87"
                    android:textSize="@dimen/t_size_caption"
                    android:textStyle="bold" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/i_icon_size_bigger"
                android:layout_marginEnd="@dimen/paragraph_margin"
                android:layout_marginStart="@dimen/dialog_margin_icon"
                android:layout_marginTop="@dimen/paragraph_margin">


                <TextView
                    android:id="@+id/tv_type_post_notification"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_btn_border_empty"
                    android:gravity="center"
                    android:text="@string/type_post_notification"
                    android:textColor="@color/black_87"
                    android:textSize="@dimen/t_size_caption"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_type_post_poll"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/paragraph_margin"
                    android:layout_weight="1"
                    android:background="@drawable/bg_btn_border_empty"
                    android:gravity="center"
                    android:text="@string/type_post_poll"
                    android:textColor="@color/black_87"
                    android:textSize="@dimen/t_size_caption"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/i_icon_size_bigger"
                android:layout_marginEnd="@dimen/paragraph_margin"
                android:layout_marginStart="@dimen/dialog_margin_icon"
                android:layout_marginTop="@dimen/paragraph_margin">

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/paragraph_margin"
                    android:layout_weight="1"
                    android:id="@+id/view" />

                <TextView
                    android:id="@+id/tv_type_post_exercise"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_btn_border_empty"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="@string/type_post_exercise"
                    android:textColor="@color/black_87"
                    android:textSize="@dimen/t_size_caption"
                    android:textStyle="bold" />


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_deadline"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/paragraph_margin"
                android:layout_marginTop="28dp"
                android:text="@string/txt_deadline"
                android:textColor="@color/black_87"
                android:textSize="@dimen/text_size_tiny" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/i_icon_size_bigger"
                android:layout_marginEnd="@dimen/paragraph_margin"
                android:layout_marginStart="@dimen/dialog_margin_icon"
                android:layout_marginTop="@dimen/paragraph_margin">

                <TextView
                    android:id="@+id/tv_pick_date"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_btn_border_empty"
                    android:clickable="true"
                    android:drawableRight="@drawable/ic_drop_down"
                    android:gravity="center"
                    android:text="12/10/2016"
                    android:textColor="@color/black_87"
                    android:textSize="@dimen/t_size_body" />

                <TextView
                    android:id="@+id/tv_pick_time"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/paragraph_margin"
                    android:layout_weight="1"
                    android:background="@drawable/bg_btn_border_empty"
                    android:clickable="true"
                    android:drawableRight="@drawable/ic_drop_down"
                    android:gravity="center"
                    android:text="21:00"
                    android:textColor="@color/black_87"
                    android:textSize="@dimen/t_size_body" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_mode_incognito"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="vertical"
            android:visibility="visible">

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/sc_incognito_mode_post"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="70dp"
                android:layout_marginStart="@dimen/paragraph_margin"
                android:background="@android:color/white"
                android:paddingBottom="@dimen/t_size_button"
                android:paddingTop="28dp"
                android:text="@string/post_incognito"
                android:textSize="@dimen/text_size_tiny" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>