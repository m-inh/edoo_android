<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingEnd="@dimen/activity_vertical_margin"
    android:paddingStart="@dimen/activity_vertical_margin"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:minHeight="72dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_submitted_status"
            android:layout_width="@dimen/i_icon_size_big"
            android:layout_height="@dimen/i_icon_size_big"
            android:src="@drawable/ic_submitted_on_time" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/i_class_padding_left">

            <TextView
                android:id="@+id/tv_student_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/author_name"
                android:textColor="@color/black_87"
                android:textSize="@dimen/t_size_subheading" />

            <TextView
                android:id="@+id/tv_submitted_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="19:00, 12/10/2016"
                android:textColor="@color/black_54"
                android:textSize="@dimen/t_size_body" />
        </LinearLayout>

    </LinearLayout>

    <!--<TextView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1dp"-->
        <!--android:background="@color/bg_divider" />-->


</LinearLayout>