<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_item_subject_1"
    android:minWidth="310dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialogTenMH"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black_6"
        android:paddingBottom="@dimen/dialog_margin_icon"
        android:paddingLeft="@dimen/dialog_padding_around_content"
        android:paddingRight="@dimen/dialog_padding_around_content"
        android:paddingTop="@dimen/dialog_margin_icon"
        android:text="Ten mon hoc"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dialog_margin_icon"
        android:paddingLeft="@dimen/dialog_padding_around_content"
        android:paddingRight="@dimen/dialog_padding_around_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/action_padding"
            android:gravity="center_vertical"
            android:minHeight="@dimen/d_height"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_info_content_hint_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mã môn học"
                android:textColor="@color/black_54"
                android:textSize="@dimen/t_size_body" />

            <TextView
                android:id="@+id/dialogMaMH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="QH-I-CQ-2013/CLC"
                android:textColor="@color/black"
                android:textSize="@dimen/t_size_subheading" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="@dimen/d_height"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giảng viên"
                android:textColor="@color/black_54"
                android:textSize="@dimen/t_size_body" />

            <TextView
                android:id="@+id/dialogGiangVien"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="QH-I-CQ-2013/CLC"
                android:textColor="@color/black"
                android:textSize="@dimen/t_size_subheading" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="@dimen/d_height"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thời gian"
                android:textColor="@color/black_54"
                android:textSize="@dimen/t_size_body" />

            <TextView
                android:id="@+id/dialogThoiGian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="QH-I-CQ-2013/CLC"
                android:textColor="@color/black"
                android:textSize="@dimen/t_size_subheading" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="@dimen/d_height"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Địa điểm"
                android:textColor="@color/black_54"
                android:textSize="@dimen/t_size_body" />

            <TextView
                android:id="@+id/dialogDiaDiem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="QH-I-CQ-2013/CLC"
                android:textColor="@color/black"
                android:textSize="@dimen/t_size_subheading" />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:paddingBottom="@dimen/action_padding">

        <Button
            android:id="@+id/btn_direct_to_class_dialog"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/btn_dialog_height"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/action_padding"
            android:layout_marginTop="@dimen/action_padding"
            android:background="@drawable/bg_btn_pressed"
            android:padding="@dimen/line_text_margin"
            android:text="Vào lớp"
            android:textAllCaps="true"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/t_size_button"
            android:textStyle="bold" />

    </LinearLayout>


</LinearLayout>
