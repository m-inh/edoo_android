<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="@dimen/i_height"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_horizontal_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_horizontal_margin">

            <TextView
                android:id="@+id/tv_info_content_hint_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/card_padding"
                android:text="Lớp khóa học"
                android:textColor="@color/black_54"
                android:textSize="@dimen/t_size_body" />

            <TextView
                android:id="@+id/tv_info_content_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="QH-I-CQ-2013/CLC"
                android:textColor="@color/black"
                android:textSize="@dimen/t_size_subheading" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:background="@color/black_12" />

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_edit_info_profile"
        android:layout_width="@dimen/i_icon_size_big"
        android:layout_height="@dimen/i_icon_size_big"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:padding="@dimen/card_padding"
        android:src="@drawable/ic_edit_info"
        android:visibility="visible" />

</RelativeLayout>