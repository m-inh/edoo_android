<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/i_height"
        android:background="@android:color/white"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_horizontal_margin"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_info_content_hint_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lớp khóa học"
            android:textColor="@color/black_54"
            android:textSize="@dimen/t_size_body"
            android:layout_marginBottom="@dimen/card_padding"/>

        <TextView
            android:id="@+id/tv_info_content_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QH-I-CQ-2013/CLC"
            android:textSize="@dimen/t_size_subheading"
            android:textColor="@color/black"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/bg_divider"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"/>

</LinearLayout>