<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/t_i_l_edit_info_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dialog_padding_around_content"
        android:layout_marginRight="@dimen/dialog_padding_around_content"
        android:layout_marginBottom="@dimen/paragraph_margin"
        >

        <EditText
            android:id="@+id/edt_info_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="50"
            android:inputType="textMultiLine|textCapSentences"
            android:textSize="@dimen/text_size_normal" />

    </android.support.design.widget.TextInputLayout>

</LinearLayout>