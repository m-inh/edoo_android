<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DialogNoActionBar" parent="@android:style/Theme.Holo.Light.Dialog.NoActionBar">
        <item name="windowNoTitle">true</item>
    </style>

    <style name="full_screen_dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <style name="DialogAnimation" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:windowSoftInputMode">stateVisible</item>
    </style>

    <style name="DialogInput" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:windowSoftInputMode">stateVisible</item>
    </style>
    <style name="DialogInputActionBar" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:windowSoftInputMode">stateVisible</item>
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>

    <style name="splashScreenTheme" parent="AppTheme">
        <item name="android:windowBackground">@color/colorPrimary</item>
    </style>

    <style name="DialogFullScreen" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:windowFullscreen">true</item>
    </style>

</resources>
